<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="@dimen/padding_screen">

        <Button
            android:id="@+id/acceptBuy"
            android:layout_width="100dp"
            android:layout_height="@dimen/button_primary_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_rounded_primary"
            android:fontFamily="@font/poppins"
            android:text="Setuju"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/intro_description5" />

        <Button
            android:id="@+id/denyBuy"
            android:layout_width="100dp"
            android:layout_height="@dimen/button_primary_height"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_white_stroke"
            android:fontFamily="@font/poppins"
            android:text="Batal"
            android:textAllCaps="false"
            android:textColor="@color/colorGreyDark"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/intro_description5"
            app:layout_constraintTop_toTopOf="@+id/acceptBuy" />

        <TextView
            android:id="@+id/intro_description5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/poppins"
            android:gravity="center_horizontal"
                android:text="@string/transaction_warn"
            android:textAlignment="textStart"
            android:textColor="@color/colorBlackBright"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/intro_title3"
            app:layout_constraintStart_toStartOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_screen"
            android:layout_marginTop="32dp"
            android:text="Perhatian"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintBottom_toTopOf="@+id/totalHarga"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>