<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThanksActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/button_primary_width"
        android:layout_height="@dimen/button_primary_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_rounded_primary"
        android:fontFamily="@font/poppins"
        android:text="Tambah isi keranjang"
        android:textAllCaps="false"

        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/intro_title3"
        app:layout_constraintStart_toStartOf="@+id/intro_title3"
        app:layout_constraintTop_toBottomOf="@+id/intro_description3" />

    <TextView
        android:id="@+id/intro_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Keranjang Anda Kosong"
        android:textColor="@color/colorBlackBright"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/intro_description3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:gravity="center_horizontal"
        android:text="tambahkan beberapa barang \n ke keranjang anda"
        android:textAlignment="center"
        android:textColor="@color/colorBlackBright"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/intro_title3"
        app:layout_constraintStart_toStartOf="@+id/intro_title3"
        app:layout_constraintTop_toBottomOf="@+id/intro_title3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_thanks"
        tools:ignore="VectorDrawableCompat" />
</androidx.constraintlayout.widget.ConstraintLayout>