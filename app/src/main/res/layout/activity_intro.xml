<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpager"
            android:layout_width="match_parent"
            android:layout_height="470sp"
            android:layout_marginBottom="10dp">

        </androidx.viewpager.widget.ViewPager>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabBackground="@drawable/indicator_selector_pv"
            android:layout_marginBottom="45dp">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.google.android.material.tabs.TabLayout>

        <Button
            android:id="@+id/register_button"
            android:layout_width="@dimen/button_primary_width"
            android:layout_height="@dimen/button_primary_height"
            android:text="Buat Akun"
            android:background="@drawable/btn_rounded_primary"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="20dp"
            android:textSize="14sp"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/login_button"
            android:layout_width="@dimen/button_secondary_width"
            android:layout_height="@dimen/button_secondary_height"
            android:fontFamily="@font/poppins_medium"
            android:text="Login Akun Google"
            android:layout_gravity="center"
            android:background="@drawable/btn_rounded_secondary"
            android:layout_marginBottom="20dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            />

        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:onClick="LoginText"
            android:text="Login"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:fontFamily="@font/poppins_bold" />

    </LinearLayout>

</RelativeLayout>